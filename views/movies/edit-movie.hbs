<h2>Edit Movie</h2>

<form action="/movies/{{foundMovie._id}}/edit" method="POST">

  <p>   
        <label>Title:</label>
        <input type="text" name="title" />
    </p>

    <p>
        <label>Genre:</label>
        <input type="text" name="genre" /> 
    </p>

  <p>
        <label>Plot:</label>
        <input type="text" name="plot" />
  </p>

  <p>
       
        <label>Cast:</label>
            <ul>
            {{#each foundMovie.cast}}
                <li>Name: {{this.name}}</li>
                <li>Occupation: {{this.occupation}}</li>
                <li>Catch Phrase: {{this.catchPhrase}}</li>
                    <br>
            {{/each}}

            </ul>
        </select>
    
  </p>       

<button action="submit">Submit</button>
</form>
